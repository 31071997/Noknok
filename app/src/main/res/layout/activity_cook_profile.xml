<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="25dp"
    tools:context=".CookProfile">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="71dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp">
                <LinearLayout
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <include
                        layout="@layout/cook_profile_head"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share"
                    android:layout_gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cook_profile_number"
                        android:style="@style/rating"
                        android:textFontWeight="700"
                        android:textColor="@color/favourites_cook"
                        android:layout_marginLeft="80dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cook_profile_number"
                        android:style="@style/rating"
                        android:textColor="@color/favourites_cook"
                        android:layout_marginLeft="80dp"
                        android:textFontWeight="700"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rating"
                        android:style="@style/rating"
                        android:textColor="@color/favourites_cook"
                        android:textFontWeight="700"
                        android:layout_marginLeft="80dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="9dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/sold"
                        android:textAppearance="@style/rating"
                        android:textColor="@color/sold"
                        android:layout_marginLeft="63dp"
                        android:textFontWeight="700"/>
                    <Button
                        android:text="@string/like"
                        android:textAppearance="@style/rating"
                        android:textColor="@color/white"
                        android:layout_marginLeft="45dp"
                        android:layout_width="49dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_like_rate_background"/>
                    <Button
                        android:text="@string/rate"
                        android:textAppearance="@style/rating"
                        android:textColor="@color/white"
                        android:layout_marginLeft="59dp"
                        android:layout_width="49dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_like_rate_background"/>
                </LinearLayout>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_marginTop="39dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="13dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/review">
                        <!--will be replaced by cycle  fragment..-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:text="@string/review"
                            android:style="@style/cook_name"
                            android:textFontWeight="300"
                            android:textColor="@color/review"/>
                    </FrameLayout>
                </ScrollView>
            </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="35dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dish_request"
                    android:style="@style/dish_request"
                    android:textColor="@color/favourites_cook"
                    android:textFontWeight="500"/>
                <TextView
                    android:layout_marginTop="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/request_rule"
                    android:textAppearance="@style/dish_request"
                    android:textColor="@color/request_rule"
                    android:textFontWeight="400"/>

                <Button
                    android:layout_width="127dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/ic_request_background"
                    android:textAppearance="@style/dish_request"
                    android:text="@string/request"
                    android:textColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="54dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scheduled_dishes"
                    android:textColor="@color/cart_description"
                    android:textFontWeight="500"/>
                <ImageButton
                    android:layout_gravity="center"
                    android:background="transparent"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="9dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow_left"
                            android:background="transparent"/>
                        <ImageButton
                            android:layout_marginLeft="310dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow_right"
                            android:background="transparent"/>
                    </LinearLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/scheduled_dish"/>
                    <!--included portion will be removedlater-->
                    <include
                        layout="@layout/profile_dish_cycle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="54dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signature_dishes"
                    android:textColor="@color/cart_description"
                    android:textFontWeight="500"/>
                <ImageButton
                    android:layout_gravity="center"
                    android:background="transparent"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_marginTop="9dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow_left"
                            android:background="transparent"/>
                        <ImageButton
                            android:layout_marginLeft="310dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/arrow_right"
                            android:background="transparent"/>
                    </LinearLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/signature_dish"/>
                    <!--included portion will be removed later-->
                    <include
                        layout="@layout/profile_dish_cycle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <include
        android:layout_marginTop="10dp"
        layout="@layout/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>