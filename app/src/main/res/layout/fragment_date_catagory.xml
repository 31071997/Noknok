<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg"
    android:orientation="vertical"
    tools:context=".ui.date_catagory.DateCatagoryFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <Button
            android:gravity="center"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_rectangle_263"
            android:text="@string/date"
            android:textAppearance="@style/date"/>
        <Button
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_rectangle_262"
            android:text="@string/categories"
            android:textAppearance="@style/date"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/ic_menu_bg">
            <CalendarView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_margin="5dp"/>
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/salad"/>
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/salad"
                                android:textAppearance="@style/cook_description"
                                android:textFontWeight="700"
                                android:background="transparent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/grocery"/>
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/groceries"
                                android:background="transparent"
                                android:textAppearance="@style/cook_description"
                                android:textFontWeight="700"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/frozen"/>
                            <Button
                                android:textAppearance="@style/cook_description"
                                android:textFontWeight="700"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/frozen"
                                android:background="transparent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/drinks"/>
                            <Button
                                android:textAppearance="@style/cook_description"
                                android:textFontWeight="700"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/drinks"
                                android:background="transparent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/daily_meal"/>
                            <Button
                                android:textAppearance="@style/cook_description"
                                android:textFontWeight="700"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/daily_meal"
                                android:background="transparent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/snacks"/>
                            <Button
                                android:textAppearance="@style/cook_description"
                                android:textFontWeight="700"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/snacks"
                                android:background="transparent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/dairies"/>
                            <Button
                                android:textAppearance="@style/cook_description"
                                android:textFontWeight="700"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dairies"
                                android:background="transparent"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/non_veg"/>
                            <Button
                                android:textAppearance="@style/cook_description"
                                android:textFontWeight="700"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/non_veg"
                                android:background="transparent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/veg"/>
                            <Button
                                android:textAppearance="@style/cook_description"
                                android:textFontWeight="700"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/veg"
                                android:background="transparent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/biriyani"/>
                            <Button
                                android:textAppearance="@style/cook_description"
                                android:textFontWeight="700"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/biriyani"
                                android:background="transparent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/dessert"/>
                            <Button
                                android:textAppearance="@style/cook_description"
                                android:textFontWeight="700"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/desserts"
                                android:background="transparent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/achar"/>
                            <Button
                                android:textAppearance="@style/cook_description"
                                android:textFontWeight="700"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pickles"
                                android:background="transparent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/pastry"/>
                            <Button
                                android:textAppearance="@style/cook_description"
                                android:textFontWeight="700"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pastry"
                                android:background="transparent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/cake"/>
                            <Button
                                android:textAppearance="@style/cook_description"
                                android:textFontWeight="700"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cake"
                                android:background="transparent"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>