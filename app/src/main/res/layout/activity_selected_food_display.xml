<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="25dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:lineHeight="21sp"
            android:text="Your order from Kopila's Kitchen"
            android:textAppearance="@style/search"
            android:textFontWeight="400" />

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="65dp"
            android:src="@drawable/background"
            />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/profile"
            android:layout_marginTop="46dp"
            android:layout_marginLeft="33dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:text="Dish Description"
        android:textAppearance="@style/cart_description"
        android:textFontWeight="400"
        />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Content Description"
        android:textAppearance="@style/content_description"
        android:textFontWeight="800"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="130dp"
            android:layout_height="16dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="500"
            android:lineHeight="17sp"
            android:text="Portion Details"
            android:textAppearance="@style/food_display_title"
            />
        <TextView
            android:layout_width="4dp"
            android:layout_height="16dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="700"
            android:lineHeight="17sp"
            android:text=":"
            android:textAppearance="@style/food_display_description"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="500"
            android:lineHeight="17sp"
            android:layout_marginLeft="17dp"
            android:text="Description of Food"
            android:textAppearance="@style/food_display_description"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="130dp"
            android:layout_height="16dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="500"
            android:lineHeight="17sp"
            android:text="Basic Ingredients"
            android:textAppearance="@style/food_display_title"
            />
        <TextView
            android:layout_width="4dp"
            android:layout_height="16dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="700"
            android:lineHeight="17sp"
            android:text=":"
            android:textAppearance="@style/food_display_description"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="500"
            android:lineHeight="17sp"
            android:layout_marginLeft="17dp"
            android:text="Description of Food"
            android:textAppearance="@style/food_display_description"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="130dp"
            android:layout_height="16dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="500"
            android:lineHeight="17sp"
            android:text="Cuisine"
            android:textAppearance="@style/food_display_title"
            />
        <TextView
            android:layout_width="4dp"
            android:layout_height="16dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="700"
            android:lineHeight="17sp"
            android:text=":"
            android:textAppearance="@style/food_display_description"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="500"
            android:lineHeight="17sp"
            android:layout_marginLeft="17dp"
            android:text="Description of Food"
            android:textAppearance="@style/food_display_description"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="130dp"
            android:layout_height="16dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="500"
            android:lineHeight="17sp"
            android:text="Food Catagory"
            android:textAppearance="@style/food_display_title"
            />
        <TextView
            android:layout_width="4dp"
            android:layout_height="16dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="700"
            android:lineHeight="17sp"
            android:text=":"
            android:textAppearance="@style/food_display_description"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="500"
            android:lineHeight="17sp"
            android:layout_marginLeft="17dp"
            android:text="Description of Food"
            android:textAppearance="@style/food_display_description"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="130dp"
            android:layout_height="16dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="500"
            android:lineHeight="17sp"
            android:text="Food Type"
            android:textAppearance="@style/food_display_title"
            />
        <TextView
            android:layout_width="4dp"
            android:layout_height="16dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="700"
            android:lineHeight="17sp"
            android:text=":"
            android:textAppearance="@style/food_display_description"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="500"
            android:lineHeight="17sp"
            android:layout_marginLeft="17dp"
            android:text="Description of Food"
            android:textAppearance="@style/food_display_description"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        >
        <ImageButton
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/group_140" />
        <TextView
            android:layout_width="20dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/cart_number"
            android:textFontWeight="700"
            />
        <ImageButton
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/group_141"
            android:background="transparent"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1400 BDT"
        android:layout_gravity="center"
        android:textAppearance="@style/check_out_subtotal"
        android:textColor="@color/black"
        android:textFontWeight="300"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp" >
        <Button
            android:layout_width="195dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_checkout_button"
            android:text="@string/check_out"
            android:textAppearance="@style/check_out_subtotal"
            android:textColor="@color/white"
            android:textFontWeight="500" />

        <Button
            android:layout_width="195dp"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/ic_rectangle_260"
            android:text="Add to Cart"
            android:textAppearance="@style/check_out_subtotal"
            android:textColor="@color/white"
            android:textFontWeight="500" />

    </LinearLayout>

</LinearLayout>