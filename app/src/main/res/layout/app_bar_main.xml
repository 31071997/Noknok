<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeDishDisplay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="76dp">

        <RelativeLayout
            android:layout_width="188dp"
            android:layout_height="match_parent"
            android:layout_marginRight="197dp">
            <View
                android:id="@+id/rectangle2"
                android:layout_width="188dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_rectangle_212_white" />
            <TextView
                android:id="@+id/dishes"
                android:layout_width="49dp"
                android:layout_height="19dp"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/RobotoRegular"
                android:lineHeight="19sp"
                android:text="@string/dishes"
                android:textAppearance="@style/dishes"
                android:textFontWeight="500" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="188dp"
            android:layout_height="24dp"
            android:layout_marginLeft="-188dp">
            <View
                android:id="@+id/rectangle1"
                android:layout_width="188dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_rectangle_212_white" />
            <TextView
                android:id="@+id/cooks"
                android:layout_width="49dp"
                android:layout_height="19dp"
                android:layout_marginLeft="63dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/RobotoRegular"
                android:lineHeight="19sp"
                android:text="@string/cooks"
                android:textAppearance="@style/dishes"
                android:textFontWeight="500" />

        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <view
            android:layout_width="38dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="31dp"
            android:background="@drawable/ic_group_37"/>
</LinearLayout>

