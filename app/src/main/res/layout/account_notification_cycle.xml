<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:elevation="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:background="@color/notification">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="1000"
            android:layout_marginLeft="28dp"
            android:lineHeight="16sp"
            android:layout_marginTop="20dp"
            android:text="22/10/2021"
            android:textAppearance="@style/account_notification_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="700"
            android:layout_marginTop="12dp"
            android:lineHeight="16sp"
            android:layout_marginLeft="28dp"
            android:text="Order Jhal Mangsho been accepted by Halima Khatun"
            android:layout_marginBottom="20dp"
            android:textAppearance="@style/account_order_item" />

    </LinearLayout>



</LinearLayout>