<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:elevation="25dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textFontWeight="1000"
            android:lineHeight="12sp"
            android:layout_marginLeft="30dp"
            android:text="Client : "
            android:textAppearance="@style/special_request"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textFontWeight="1000"
            android:lineHeight="12sp"
            android:layout_marginLeft="5dp"
            android:text="Name of Client"
            android:textAppearance="@style/special_request"
            />
    </LinearLayout>

    <include
        layout="@layout/view_order_cycle_under_cycle_for_dish_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textFontWeight="1000"
            android:lineHeight="12sp"
            android:layout_marginLeft="30dp"
            android:text="Delivery Time : "
            android:textAppearance="@style/special_request"
            android:textColor="#F92C2C"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textFontWeight="1000"
            android:lineHeight="12sp"
            android:layout_marginLeft="5dp"
            android:text="Time"
            android:textAppearance="@style/special_request"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textFontWeight="1000"
            android:lineHeight="12sp"
            android:layout_marginLeft="140dp"
            android:text="Total : "
            android:textAppearance="@style/special_request"
            android:textColor="#F92C2C"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textFontWeight="1000"
            android:lineHeight="12sp"
            android:layout_marginLeft="5dp"
            android:text="230/="
            android:textAppearance="@style/special_request"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textFontWeight="1000"
            android:lineHeight="12sp"
            android:layout_marginLeft="30dp"
            android:text="Location : "
            android:textAppearance="@style/special_request"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textFontWeight="1000"
            android:lineHeight="12sp"
            android:layout_marginLeft="5dp"
            android:text="Location Details"
            android:textAppearance="@style/special_request"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/icons8_callback_40px_1"/>

        <Button
            android:layout_width="73dp"
            android:layout_height="21dp"
            android:layout_marginLeft="250dp"
            android:background="@drawable/ic_rectangle_429"
            android:text="Accept"
            android:textFontWeight="1000"
            android:textAppearance="@style/cuisine_button"/>

    </LinearLayout>

    <Button
        android:layout_width="73dp"
        android:layout_height="21dp"
        android:layout_marginLeft="302dp"
        android:background="@drawable/ic_rectangle_430"
        android:text="Cancel"
        android:layout_marginTop="10dp"
        android:textFontWeight="1000"
        android:textAppearance="@style/cuisine_button"/>

</LinearLayout>