<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="25dp"
        android:fontFamily="@font/roboto_regular"
        android:lineHeight="20sp"
        android:text="Filters"
        android:textAppearance="@style/account_show_username"
        android:textFontWeight="1000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:fontFamily="@font/roboto_regular"
        android:textFontWeight="400"
        android:lineHeight="25sp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="45dp"
        android:text="Food Available between"
        android:textAppearance="@style/account_profile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:textFontWeight="300"
        android:lineHeight="25sp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="14dp"
        android:text="12:00 AM - 11:45 PM"
        android:textAppearance="@style/filter_attribute"
        />

    <ProgressBar
        android:layout_width="230dp"
        android:layout_height="3dp"
        android:id="@+id/pBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="25dp"
        android:progress="50" />

</LinearLayout>