<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="324dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:background="@drawable/ic_rectangle_358"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background=""
                android:src="@drawable/ic_arrow_18" />>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:fontFamily="@font/roboto_regular"
                android:textFontWeight="1000"
                android:lineHeight="21sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="80dp"
                android:text="Add Dish"
                android:textAppearance="@style/cook_user"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="1000"
            android:lineHeight="17.85sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            android:text="Recipe Name"
            android:textAppearance="@style/edit_profile"
            />

        <View
            android:layout_width="350dp"
            android:layout_height="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/ic_line_16"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="1000"
            android:lineHeight="17.85sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:text="Recipe Description"
            android:textAppearance="@style/edit_profile"
            />

        <View
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/ic_rectangle_520"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="1000"
            android:lineHeight="17.85sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:text="Total Piece or Total Gram"
            android:textAppearance="@style/edit_profile"
            />

        <View
            android:layout_width="350dp"
            android:layout_height="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/ic_line_16"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="1000"
            android:lineHeight="17.85sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:text="Phone Number"
            android:textAppearance="@style/edit_profile"
            />

        <View
            android:layout_width="350dp"
            android:layout_height="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/ic_line_16"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="1000"
            android:lineHeight="17.85sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:text="Email Id"
            android:textAppearance="@style/edit_profile"
            />

        <View
            android:layout_width="350dp"
            android:layout_height="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/ic_line_16"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="1000"
            android:lineHeight="17.85sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:text="Home Address"
            android:textAppearance="@style/edit_profile"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="300"
            android:lineHeight="17.85sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="25dp"
            android:text="( to estimae customer coverage )"
            android:textAppearance="@style/edit_profile"
            />

        <View
            android:layout_width="350dp"
            android:layout_height="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/ic_line_16"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:fontFamily="@font/roboto_regular"
                android:textFontWeight="1000"
                android:lineHeight="17.85sp"
                android:layout_marginLeft="16dp"
                android:text="Opening Time"
                android:textAppearance="@style/edit_profile"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:fontFamily="@font/roboto_regular"
                android:textFontWeight="1000"
                android:lineHeight="17.85sp"
                android:layout_marginLeft="100dp"
                android:text="Closing Time"
                android:textAppearance="@style/edit_profile"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>