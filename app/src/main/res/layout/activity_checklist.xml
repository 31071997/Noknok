<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/roboto_regular"
            android:lineHeight="19.5sp"
            android:text="Food Item Record"
            android:textAppearance="@style/user_dashboard"
            android:textFontWeight="800" />

        <LinearLayout
            android:layout_width="327dp"
            android:layout_height="27dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/ic_rectangle_427"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2.5dp"
                android:fontFamily="@font/roboto_regular"
                android:lineHeight="16sp"
                android:text="Search Updated Item"
                android:textAppearance="@style/checklist_search"
                android:textFontWeight="800" />

            <View
                android:layout_width="11dp"
                android:layout_height="13dp"
                android:layout_marginLeft="145dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/ic_group_14" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/roboto_regular"
            android:lineHeight="14sp"
            android:text="Activate to make it available Online"
            android:textAppearance="@style/checklist_text"
            android:textFontWeight="800" />

        <include
            layout="@layout/checklist_cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

</ScrollView>
