<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="25dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="37dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:lineHeight="19.92sp"
        android:text="Username"
        android:textAppearance="@style/account_show_username"
        android:textFontWeight="1000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="49dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/account_profile"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="400"
            android:lineHeight="23sp"
            android:layout_marginLeft="40dp"
            android:text="Profile"
            android:textAppearance="@style/account_profile"
            />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="214dp"
            android:background="@drawable/ic_icons8_customer_30px_1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/account_orders"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="400"
            android:lineHeight="23sp"
            android:layout_marginLeft="40dp"
            android:text="Orders"
            android:textAppearance="@style/account_profile"
            />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="214dp"
            android:background="@drawable/ic_group_35"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/account_vouchers"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="400"
            android:lineHeight="23sp"
            android:layout_marginLeft="40dp"
            android:text="Vouchers"
            android:textAppearance="@style/account_profile"
            />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="190dp"
            android:background="@drawable/ic_group_33"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/account_notifications"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="400"
            android:lineHeight="23sp"
            android:layout_marginLeft="40dp"
            android:text="Notifications"
            android:textAppearance="@style/account_profile"
            />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="165dp"
            android:background="@drawable/ic_icons8_notification_24px_1"/>
    </LinearLayout>

    <View
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/ic_rectangle_572"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/account_terms"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="400"
            android:lineHeight="23sp"
            android:layout_marginLeft="40dp"
            android:text="Terms &amp; Conditions"
            android:textAppearance="@style/account_profile"
            />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="105dp"
            android:background="@drawable/ic_icons8_terms_and_conditions_30px_1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/account_privacy"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/roboto_regular"
            android:lineHeight="23sp"
            android:text="Privacy Policy"
            android:textAppearance="@style/account_profile"
            android:textFontWeight="400" />

        <View
            android:layout_width="27dp"
            android:layout_height="24dp"
            android:layout_marginLeft="160dp"
            android:background="@drawable/icons8_policy_document_30px_1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/account_help"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="400"
            android:lineHeight="23sp"
            android:layout_marginLeft="40dp"
            android:text="Help &amp; Support"
            android:textAppearance="@style/account_profile"
            />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="145dp"
            android:background="@drawable/icons8_help_24px_1"/>
    </LinearLayout>

    <View
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/ic_rectangle_572"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/account_logout"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="400"
            android:lineHeight="23sp"
            android:layout_marginLeft="40dp"
            android:text="Logout"
            android:textAppearance="@style/account_profile"
            />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="220dp"
            android:background="@drawable/group_32"
            android:gravity="end" />
    </LinearLayout>


</LinearLayout>