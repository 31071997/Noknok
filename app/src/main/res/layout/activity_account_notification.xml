<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="73dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="28dp"
            android:fontFamily="@font/roboto_regular"
            android:lineHeight="24sp"
            android:text="Notifications"
            android:textAppearance="@style/account_profile1"
            android:textFontWeight="1000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="700"
            android:layout_marginLeft="130dp"
            android:lineHeight="14sp"
            android:text="Mark as all read"
            android:textAppearance="@style/account_profile_read"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:background="#EFEFEF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="1000"
            android:layout_marginLeft="28dp"
            android:lineHeight="16sp"
            android:layout_marginTop="20dp"
            android:text="22/10/2021"
            android:textAppearance="@style/account_notification_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="700"
            android:layout_marginTop="12dp"
            android:lineHeight="16sp"
            android:layout_marginLeft="28dp"
            android:text="Order Jhal Mangsho been accepted by Halima Khatun"
            android:layout_marginBottom="20dp"
            android:textAppearance="@style/account_order_item" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:background="#EFEFEF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="1000"
            android:layout_marginLeft="28dp"
            android:lineHeight="16sp"
            android:layout_marginTop="20dp"
            android:text="22/10/2021"
            android:textAppearance="@style/account_notification_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:fontFamily="@font/roboto_regular"
            android:textFontWeight="700"
            android:layout_marginTop="12dp"
            android:lineHeight="16sp"
            android:layout_marginLeft="28dp"
            android:text="Order Jhal Mangsho been accepted by Halima Khatun"
            android:layout_marginBottom="20dp"
            android:textAppearance="@style/account_order_item" />

    </LinearLayout>








</LinearLayout>